{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@views/*": ["src/views/*"]
        },

        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
